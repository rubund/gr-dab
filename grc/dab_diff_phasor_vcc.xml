<?xml version="1.0"?>
<block>
  <name>Diff Phasor VCC</name>
  <key>dab_diff_phasor_vcc</key>
  <category>[DAB]</category>
  <import>import dab</import>
  <make>dab.diff_phasor_vcc($num_carriers)</make>

  <param>
    <name>num_carriers</name>
    <key>num_carriers</key>
    <type>int</type>
  </param>

  <sink>
    <name>in</name>
    <type>complex</type>
    <vlen>$num_carriers</vlen>
  </sink>

  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>$num_carriers</vlen>
  </source>
</block>
