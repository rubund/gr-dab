<?xml version="1.0"?>
<block>
  <name>DAB: OFDM Demodulator</name>
  <key>dab_ofdm_demod</key>
  <category>[DAB]</category>
  <import>import grdab</import>
  <make>grdab.ofdm_demod(
          grdab.parameters.dab_parameters(
            mode=$dab_mode,
            sample_rate=$samp_rate,
            verbose=False
          ),
          grdab.parameters.receiver_parameters(
            mode=$dab_mode,
            softbits=$soft_bits.soft,
            input_fft_filter=$input_fft,
            autocorrect_sample_rate=$autocorr_sr,
            sample_rate_correction_factor=1+float($ppm_error)*1e-6,
            always_include_resample=True,
            verbose=False,
            correct_ffe=$correct_ffe,
            equalize_magnitude=$eq_mag
          )
        )
  </make>
  <callback>self.$(id).resample.set_interp_ratio(1+float($ppm_error)*1e-6)</callback>

  <param>
    <name>DAB Mode</name>
    <key>dab_mode</key>
    <value>1</value>
    <type>enum</type>
    <option>
      <name>1</name>
      <key>1</key>
      <opt>vlensize:1536</opt>
    </option>
    <option>
      <name>2</name>
      <key>2</key>
      <opt>vlensize:384</opt>
    </option>
    <option>
      <name>3</name>
      <key>3</key>
      <opt>vlensize:192</opt>
    </option>
    <option>
      <name>4</name>
      <key>4</key>
      <opt>vlensize:768</opt>
    </option>
  </param>
  <param>
    <name>Sampling Rate</name>
    <key>samp_rate</key>
    <value>samp_rate</value>
    <type>int</type>
  </param>

  <param>
    <name>Input FFT Filter</name>
    <key>input_fft</key>
    <value>True</value>
    <type>enum</type>
    <option>
      <name>Disable</name>
      <key>False</key>
    </option>
    <option>
      <name>Enable</name>
      <key>True</key>
    </option>
  </param>

  <param>
    <name>Auto-corr. samplerate</name>
    <key>autocorr_sr</key>
    <value>True</value>
    <type>enum</type>
    <option>
      <name>Disable</name>
      <key>False</key>
    </option>
    <option>
      <name>Enable</name>
      <key>True</key>
    </option>
  </param>

  <param>
    <name>Fine-Freq. corr.</name>
    <key>correct_ffe</key>
    <value>True</value>
    <type>enum</type>
    <option>
      <name>Disable</name>
      <key>False</key>
    </option>
    <option>
      <name>Enable</name>
      <key>True</key>
    </option>
  </param>

  <param>
    <name>Equalize Magnitude</name>
    <key>eq_mag</key>
    <value>True</value>
    <type>enum</type>
    <option>
      <name>Disable</name>
      <key>False</key>
    </option>
    <option>
      <name>Enable</name>
      <key>True</key>
    </option>
  </param>

  <param>
    <name>Timing error (ppm)</name>
    <key>ppm_error</key>
    <value>0</value>
    <type>int</type>
  </param>


  <param>
    <name>Soft Bits</name>
    <key>soft_bits</key>
    <value>soft</value>
    <type>enum</type>
    <option>
      <name>Soft Bits</name>
      <key>soft</key>
      <opt>type:complex</opt>
      <opt>vlenfrac:1</opt>
      <opt>soft:True</opt>
    </option>
    <option>
      <name>Hard Bits</name>
      <key>hard</key>
      <opt>type:byte</opt>
      <opt>vlenfrac:4</opt>
      <opt>soft:True</opt>
    </option>
  </param>
  <check>1 &lt;= $dab_mode &lt;= 4</check>
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>
  <source>
    <name>dat</name>
    <type>$soft_bits.type</type>
    <vlen>$dab_mode.vlensize / $soft_bits.vlenfrac</vlen>
  </source>
  <doc>
    Demodulates a whole DAB signal.
    Output vector size depends on selected mode:
    Mode I:   1536 complex samples or 384 bytes
    Mode II:  384 complex samples or 96 bytes
    Mode III: 192 complex samples or 48 bytes
    Mode IV:  768 complex samples or 192 bytes
  </doc>
</block>
