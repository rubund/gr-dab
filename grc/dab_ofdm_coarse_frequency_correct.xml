<?xml version="1.0"?>
<block>
  <name>OFDM coarse freq. corr.</name>
  <key>dab_ofdm_coarse_frequency_correct</key>
  <category>[DAB]</category>
  <import>import dab</import>
  <make>dab.ofdm_coarse_frequency_correct($fft_length, $num_carriers, $cp_length)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Length</name>
    <key>fft_length</key>
    <type>int</type>
  </param>

  <param>
    <name>Carriers</name>
    <key>num_carriers</key>
    <type>int</type>
  </param>

  <param>
    <name>CP Len</name>
    <key>cp_length</key>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
    <vlen>$fft_length</vlen>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>$num_carriers</vlen>
  </source>

</block>
